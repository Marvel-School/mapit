# Production Environment Configuration
APP_ENV=production
APP_DEBUG=false
APP_NAME="MapIt - Travel Destination Mapping"
APP_URL=https://mapitedu.nl

# Database Configuration (Production MySQL)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=mapit_production
DB_USERNAME=mapit_prod_user
DB_PASSWORD=${DB_PASSWORD}

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=1440

# Mail Configuration (Production)
MAIL_DRIVER=smtp
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=${MAIL_PORT}
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=tls

# API Keys (from GitHub Secrets)
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
WEATHER_API_KEY=${WEATHER_API_KEY}

# Security (from GitHub Secrets)
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=mapit_prod_

# Logging
LOG_LEVEL=warning
LOG_CHANNEL=daily

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true

# Performance
OPCACHE_ENABLED=true
REDIS_CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
