# Production Environment Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=mapit
DB_USERNAME=mapit_user
DB_PASSWORD=secure_production_password

# Security (Generate strong keys for production)
APP_KEY=generate-a-secure-32-character-key
HASH_ALGO=PASSWORD_ARGON2I

# Session Configuration
SESSION_LIFETIME=3600
SESSION_NAME=mapit_session
SESSION_SECURE=true
SESSION_HTTPONLY=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=your-smtp-server.com
MAIL_PORT=587
MAIL_USERNAME=your-production-email@domain.com
MAIL_PASSWORD=your-production-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="MapIt Travel"

# API Keys
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-production-mapbox-access-token

# Cache Configuration
CACHE_DRIVER=redis
CACHE_TTL=7200

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DATABASE=0

# Logging
LOG_LEVEL=error
LOG_FILE=./storage/logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=3600

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ENABLED=false
CORS_ORIGINS=https://your-domain.com

# SSL Configuration
SSL_ENABLED=true
HTTPS_REDIRECT=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
