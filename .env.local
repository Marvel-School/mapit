# Local Development Environment Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME="MapIt - Travel Destination Mapping"
APP_URL=http://localhost

# Database Configuration (Docker MySQL for local development)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=mapit
DB_USERNAME=mapit_user
DB_PASSWORD=mapit_password
DB_CHARSET=utf8mb4

# Alternative SQLite Configuration (uncomment to use SQLite instead of MySQL)
# DB_CONNECTION=sqlite
# DB_DATABASE=C:\Projects\mapit\storage\database\mapit.db

# Alternative SQLite Configuration (uncomment to use SQLite instead of MySQL)
# DB_CONNECTION=sqlite
# DB_DATABASE=/var/www/html/database/mapit.db

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (for testing)
MAIL_DRIVER=log
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=

# API Keys (for external services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# File Upload Settings
MAX_UPLOAD_SIZE=20971520
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=mapit_

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=single

# External Services
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# Admin Settings
ADMIN_EMAIL=admin@mapit.com
SITE_MAINTENANCE=false

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_QUERY_LOG=true
