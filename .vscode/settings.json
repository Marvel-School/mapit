{
    // AGGRESSIVE VS Code session and restoration prevention
    "files.hotExit": "off", 
    "workbench.editor.restoreViewState": false,
    "workbench.editor.enablePreview": false,
    "files.restoreUndoStack": false,
    "workbench.startupEditor": "none",
    "window.restoreFullscreen": false,
    "window.newWindowDimensions": "default",
    "window.restoreWindows": "none",
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.closeOnFileDelete": true,
    "explorer.confirmDelete": false,
    "files.autoSave": "off",
    "workbench.editor.revealIfOpen": false,
    "workbench.editor.enablePreviewFromCodeNavigation": false,
    "workbench.editor.closeEmptyGroups": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "workbench.localHistory.enabled": false,
    "timeline.excludeSources": ["*"],
    
    // Prevent file recreation and auto-generation
    "php.suggest.basic": false,
    "emmet.showExpandedAbbreviation": "never",
    "emmet.showSuggestionsAsSnippets": false,
    "files.associations": {
        "*.php": "php"
    },
    
    // Disable IntelliSense file generation and caching
    "intelephense.files.exclude": [
        "**/test-*.php",
        "**/debug-*.php", 
        "**/verify-*.php",
        "**/*verification*.php",
        "**/scripts/*.php",
        "**/*test*.php",
        "**/*debug*.php",
        "**/*check*.php",
        "**/*diagnose*.php",
        "**/*complete*.php",
        "**/*clean*.php"
    ],
    "intelephense.environment.includePaths": [],
    "intelephense.diagnostics.undefinedMethods": false,
    "intelephense.diagnostics.undefinedFunctions": false,
    "intelephense.diagnostics.undefinedConstants": false,
    "intelephense.diagnostics.undefinedClassConstants": false,
    "intelephense.diagnostics.undefinedProperties": false,
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.diagnostics.undefinedVariables": false,
    "intelephense.completion.insertUseDeclaration": false,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
    "intelephense.completion.triggerParameterHints": false,
    "intelephense.files.maxSize": 1000000,
    
    // Additional VS Code settings to prevent auto-generation
    "workbench.editor.autoLockGroups": {},
    "files.trimTrailingWhitespace": false,
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": false,
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": true,
    "scm.alwaysShowProviders": false,
    "scm.autoRefresh": false,
    "git.autoRepositoryDetection": false,
    "git.autofetch": false,
    "git.autoStash": false,
    
