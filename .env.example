# MapIt Application Configuration
# Copy this file to .env and modify the values as needed

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=./database/mapit.db

# For MySQL (alternative)
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=mapit
# DB_USERNAME=mapit_user
# DB_PASSWORD=mapit_password

# Security
APP_KEY=your-secret-key-here
HASH_ALGO=PASSWORD_DEFAULT

# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=mapit_session

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email Configuration (for contact forms, notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@mapit.com
MAIL_FROM_NAME="MapIt Travel"

# API Keys (for mapping services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Redis Configuration (if using Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0

# Logging
LOG_LEVEL=debug
LOG_FILE=./storage/logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ENABLED=true
CORS_ORIGINS=*

# Social Login (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Admin Configuration
ADMIN_EMAIL=admin@mapit.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
